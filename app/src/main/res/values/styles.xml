
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorLightApp</item>
        <item name="colorPrimaryDark">@color/colorPrimaryApp</item>
        <item name="colorAccent">@color/colorDarkApp</item>
    </style>
    <style name="AppTheme.NoAction" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorLightApp</item>
        <item name="colorPrimaryDark">@color/colorPrimaryApp</item>
        <item name="colorAccent">@color/colorDarkApp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="backgroundcolor">#303030</item>
        <item name="cardbackgroundcolor">#424242</item>
        <item name="textcolor">@android:color/white</item>
        </style>


</resources>